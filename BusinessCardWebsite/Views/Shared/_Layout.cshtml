<html>
<head>
	<title>Massively by HTML5 UP</title>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
	<link rel="stylesheet" href="~/assets/css/main.css" asp-append-version="true" />
</head>
<body class="is-preload">
	<!-- Wrapper -->
	<div id="wrapper" class="fade-in">
		<!-- Intro -->
		<div id="intro">
			<h1>
				Добро<br />
				Пожаловать
			</h1>
			<ul class="actions">
				<li><a href="#header" class="button icon solid solo fa-arrow-down scrolly">Continue</a></li>
			</ul>
		</div>

		<!-- Header -->
		<header id="header">
			<a asp-controller="Home" asp-action="Index" class="logo">Главная</a>
		</header>

		<!-- Nav -->
		<nav id="nav">
			<ul class="links">
				@if ((string)@ViewBag.Button == "Index")
				{
					<li class="active" id="IndexButton"><a asp-controller="Home" asp-action="Index">Обо мне</a></li>
				}else{
					<li id="IndexButton"><a asp-controller="Home" asp-action="Index">Обо мне</a></li>
				}
				@if ((string)@ViewBag.Button == "Portfolio")
				{
					<li class="active" id="PortfolioButton"><a asp-controller="Home" asp-action="Portfolio">Портфолио</a></li>
				}else{
					<li id="PortfolioButton"><a asp-controller="Home" asp-action="Portfolio">Портфолио</a></li>
				}
				@if ((string)@ViewBag.Button == "Summary")
				{
					<li class="active" id="SummaryButton"><a asp-controller="Home" asp-action="Summary">Резюме</a></li>
				}else{
					<li id="SummaryButton"><a asp-controller="Home" asp-action="Summary">Резюме</a></li>
				}				
			</ul>
			<ul class="icons">
				<li><a href="https://github.com/vyshky" class="icon brands fa-github"><span class="label">GitHub</span></a></li>
			</ul>
		</nav>

		<!-- Main -->
		<div id="main">			
			@RenderBody()
		</div>

		<!-- Footer -->
		<footer id="footer">
			<section>
				<form method="post" action="#">
					<div class="fields">
						<div class="field">
							<label for="name">Name</label>
							<input type="text" name="name" id="name" />
						</div>
						<div class="field">
							<label for="email">Email</label>
							<input type="text" name="email" id="email" />
						</div>
						<div class="field">
							<label for="message">Message</label>
							<textarea name="message" id="message" rows="3"></textarea>
						</div>
					</div>
					<ul class="actions">
						<li><input type="submit" value="Send Message" /></li>
					</ul>
				</form>
			</section>
			<section class="split contact">
				<section class="alt">
					<h3>Address</h3>
					<p>
						1234 Somewhere Road #87257<br />
						Nashville, TN 00000-0000
					</p>
				</section>
				<section>
					<h3>Phone</h3>
					<p><a href="#">(000) 000-0000</a></p>
				</section>
				<section>
					<h3>Email</h3>
					<p><a href="#">info@untitled.tld</a></p>
				</section>
				<section>
					<h3>Social</h3>
					<ul class="icons alt">
						<li><a href="https://github.com/vyshky" class="icon brands fa-github"><span class="label">GitHub</span></a></li>
					</ul>
				</section>
			</section>
		</footer>

		<!-- Copyright -->
		<div id="copyright">
			<ul><li>&copy; Untitled</li><li>Design: <a href="https://html5up.net">HTML5 UP</a></li></ul>
		</div>
	</div>

	<!-- Scripts -->
	<script src="~/assets/js/jquery.min.js" asp-append-version="true"></script>
	<script src="~/assets/js/jquery.scrollex.min.js" asp-append-version="true"></script>
	<script src="~/assets/js/jquery.scrolly.min.js" asp-append-version="true"></script>
	<script src="~/assets/js/browser.min.js" asp-append-version="true"></script>
	<script src="~/assets/js/breakpoints.min.js" asp-append-version="true"></script>
	<script src="~/assets/js/util.js" asp-append-version="true"></script>
	<script src="~/assets/js/main.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
